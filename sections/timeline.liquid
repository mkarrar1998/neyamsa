<!-- s_timeline.liquid -->
{%- render 'style-section' -%}
<div class="customstyle{{ section.id }}" data-aos="{{ section.settings.animation }}" >
    <div class="container">
        <div class="section-block">
            {%- render 'section-heading' -%}
            <div class="stimeline__content">
                <section class="or-timeline js-or-timeline">
                <div class="or-timeline__container">
                    {% for block in section.blocks %}
                    <div class="or-timeline__block js-cd-block" {{ block.shopify_attributes }}>
                    <div class="or-timeline__img js-cd-img" style="background-color:{{block.settings.bg}}">
                        {% if block.settings.year != blank %}
                        <span class="or-timeline__year h6">{{ block.settings.year }}</span>
                        {% endif %}
                    </div>
                    <div class="or-timeline__content js-cd-content">
                        {% if block.settings.title != blank %}
                        <h4>{{ block.settings.title }}</h4>
                        {% endif %}
                        {% if block.settings.description != blank %}
                        <p class="txt-body">{{ block.settings.description }}</p>
                        {% endif %}
                        {% if block.settings.time != blank %}
                        <div class="or-timeline__date pb-3 pb-lg-0 d-lg-inline-block d-block">{{block.settings.time}}</div>
                        {% endif %}
                        {% if block.settings.link != blank %}
                        <a target="_blank" href="{{block.settings.link}}" title="{{ section.settings.button-text }}" class="mt-4 {{ section.settings.style_btn }}">{{section.settings.button-text}}</a>
                        {% endif %}
                        
                    </div>
                    </div>
                    {% endfor %}
                </div>
                </section>
            </div>
        </div>
    </div>
</div>

