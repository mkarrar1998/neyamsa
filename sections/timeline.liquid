{% style %}
.customstyle{{ section.id }}{
    --or-tl-border:{{ section.settings.border }};
    --or-tl-bg : {{ section.settings.caption-bg }};
    --or-tl-textcolor : {{ section.settings.title_color }};
    
}
.or-timeline__container:before{
    background-color:var(--or-tl-border);
}
.or-timeline__content{
    border:1px solid var(--or-tl-border);
    box-shadow: 4px 4px 0 0 var(--or-tl-border);
    background:var(--or-tl-bg);
}
.customstyle{{ section.id }} .or-timeline__content{
    --g-color-heading: var(--or-tl-textcolor);
    --color-body-text-rgb: {{ section.settings.title_color.red }}, {{ section.settings.title_color.green }}, {{ section.settings.title_color.blue }};
    --color-body-text: {{ section.settings.title_color }};
}

.or-timeline__container {
  position: relative;
}
.or-timeline__container::before {
  content: "";
  position: absolute;
  top: 0;
  left: 30px;
  height: 100%;
  width: 2px;
}
.or-timeline__container:after{
    content: "";
    position: absolute;
    bottom:-10px;
    left:20px;
    border-top: 12px solid var(--or-tl-border);
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;

}
.or-timeline__block:after,
.or-timeline__content:after {
  content: "";
  clear: both;
}
@media only screen and (min-width: 1170px) {
  .cd-is-hidden {
    visibility: hidden;
  }
  .or-timeline__container::before {
    left: 50%;
    margin-left: -2px;
  }
  .or-timeline__container:after{
    left:calc(50% - 1px);
    transform:translateX(-50%);
}
}
.or-timeline__block {
  position: relative;
  margin: 2em 0;
}
.or-timeline__block:after {
  display: table;
}
.or-timeline__block:first-child {
  margin-top: 0;
}
.or-timeline__block:last-child {
  margin-bottom: 0;
}
@media only screen and (min-width: 1170px) {
  .or-timeline__block {
    margin: 4em 0;
  }
}
.or-timeline__img {
  position: absolute;
  top: 0;
  left: 0;
  min-width: inherit;
  height: 40px;
  text-align: center;
  border-radius: 24px;
  border:2px solid var(--or-tl-border);
  display:flex;
  align-items:center;
  justify-content:center;
  padding: 4px 12px;
}
.or-timeline__img svg {
  max-width: 15px;
  vertical-align: middle;
}
.or-timeline__img img {
  display: block;
  width: 30px;
  height: 30px;
  position: relative;
  left: 50%;
  top: 50%;
  margin-left: -15px;
  margin-top: -15px;
}
@media only screen and (min-width: 1170px) {
  .or-timeline__img {
    min-width: 120px;
    left: 50%;
    margin-left:-60px;
    transform:translateZ(0);
  }
  .or-timeline__img.or-timeline__img--bounce-in {
    visibility: visible;
    -webkit-animation: cd-bounce-1 0.6s;
    animation: cd-bounce-1 0.6s;
  }
}
@-webkit-keyframes cd-bounce-1 {
  0% {
    opacity: 0;
    -webkit-transform: scale(0.5);
    transform: scale(0.5);
  }
  60% {
    opacity: 1;
    -webkit-transform: scale(1.2);
    transform: scale(1.2);
  }
  100% {
    -webkit-transform: scale(1);
    transform: scale(1);
  }
}
@keyframes cd-bounce-1 {
  0% {
    opacity: 0;
    -webkit-transform: scale(0.5);
    transform: scale(0.5);
  }
  60% {
    opacity: 1;
    -webkit-transform: scale(1.2);
    transform: scale(1.2);
  }
  100% {
    -webkit-transform: scale(1);
    transform: scale(1);
  }
}
.or-timeline__content {
  position: relative;
  margin-left: 80px;
  border-radius: 0.5rem;
  padding: 1em;
}
.or-timeline__content:after {
  display: table;
}
.or-timeline__content::before {
  content: "";
  position: absolute;
  top: 16px;
  right: 100%;
  height: 0;
  width: 0;
  border: 7px solid transparent;
}
.or-timeline__content p {
  margin: 1em 0;
  line-height: 1.6;
}
.or-timeline__date,
.or-timeline__read-more {
  display: inline-block;
}
.or-timeline__read-more {
  float: right;
  padding: 12px 15px;
  color: #fff !important;
  border-radius: 0px;
  -webkit-transition: ease 0.3s;
  -o-transition: ease 0.3s;
  transition: ease 0.3s;
}
@media only screen and (min-width: 1170px) {
  .or-timeline__content {
    margin-left: 0;
    padding: 1.5rem;
    width: 40%;
    -webkit-transform: translateZ(0);
    transform: translateZ(0);
  }
  .or-timeline__content::before {
    top: 24px;
    left: 100%;
    border-color: transparent;
  }
  .or-timeline__read-more {
    float: left;
  }
  .or-timeline__block:nth-child(even) .or-timeline__content,
  .or-timeline__block:nth-child(even) .or-timeline__read-more {
    float: right;
  }
  .or-timeline__date {
    position: absolute;
    width: 100%;
    left: 142%;
    top: 6px;
  }
  .or-timeline__block:nth-child(even) .or-timeline__content::before {
    top: 24px;
    left: auto;
    right: 100%;
    border-color: transparent;
  }
  .or-timeline__block:nth-child(even) .or-timeline__date {
    left: auto;
    right: 142%;
    text-align: right;
  }
  .or-timeline__content.or-timeline__content--bounce-in {
    visibility: visible;
    -webkit-animation: cd-bounce-2 0.6s;
    animation: cd-bounce-2 0.6s;
  }
  .or-timeline__block:nth-child(even)
    .or-timeline__content.or-timeline__content--bounce-in {
    -webkit-animation: cd-bounce-2-inverse 0.6s;
    animation: cd-bounce-2-inverse 0.6s;
  }
}
@-webkit-keyframes cd-bounce-2 {
  0% {
    opacity: 0;
    -webkit-transform: translateX(-100px);
    transform: translateX(-100px);
  }
  60% {
    opacity: 1;
    -webkit-transform: translateX(20px);
    transform: translateX(20px);
  }
  100% {
    -webkit-transform: translateX(0);
    transform: translateX(0);
  }
}
@keyframes cd-bounce-2 {
  0% {
    opacity: 0;
    -webkit-transform: translateX(-100px);
    transform: translateX(-100px);
  }
  60% {
    opacity: 1;
    -webkit-transform: translateX(20px);
    transform: translateX(20px);
  }
  100% {
    -webkit-transform: translateX(0);
    transform: translateX(0);
  }
}
@-webkit-keyframes cd-bounce-2-inverse {
  0% {
    opacity: 0;
    -webkit-transform: translateX(100px);
    transform: translateX(100px);
  }
  60% {
    opacity: 1;
    -webkit-transform: translateX(-20px);
    transform: translateX(-20px);
  }
  100% {
    -webkit-transform: translateX(0);
    transform: translateX(0);
  }
}
@keyframes cd-bounce-2-inverse {
  0% {
    opacity: 0;
    -webkit-transform: translateX(100px);
    transform: translateX(100px);
  }
  60% {
    opacity: 1;
    -webkit-transform: translateX(-20px);
    transform: translateX(-20px);
  }
  100% {
    -webkit-transform: translateX(0);
    transform: translateX(0);
  }
}


